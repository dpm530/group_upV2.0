<!DOCTYPE html>
<html lang="en" dir="ltr">
   <head>
      <meta charset="utf-8">
      <title></title>
   </head>
   <body>

      <%= render "shared/navbar_signed_in" %>

      <div class="container py-4">
         <div class="row">
            <div class="col-md-6 mx-auto">
               <% if current_user%>
                  <form action="/events/create/<%= @group.id %>" method="post">
                     <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />

                     <div class="form-group">
                        <input type="text" name="event[name]" placeholder="Name" class="form-control" />
                     </div>

                     <div class="form-group">
                        <label for="date">Date:</label>
                        <input type="date" name="event[date]" class="form-control" />
                     </div>

                     <div class="form-group">
                        <label for="time">Time:</label>
                        <input type="time" name="event[time]" class="form-control" />
                     </div>

                     <div class="form-group">
                        <label for="description">Description:</label>
                        <textarea name="event[description]" rows="8" cols="80" class="form-control"></textarea>
                     </div>

                     <div class="form-group">
                        <label for="addressLine1">Address Line 1:</label>
                        <input type="text" name="event[addressLine1]" class="form-control" />
                     </div>

                     <div class="form-group">
                        <label for="addressLine2">Address Line 2:</label>
                        <input type="text" name="event[addressLine2]" class="form-control" />
                     </div>

                     <div class="form-group">
                        <input type="text" name="location[city]" placeholder="City" class="form-control" />
                     </div>

                     <div class="form-group">
                        <input type="text" name="location[state]" placeholder="State" class="form-control" />
                     </div>

                     <button type="submit" class="btn btn-primary disabled">Create</button>
                  </form>
               <% end %>
               <% if current_guest %>
                  <form action="" method="">
                     <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />

                     <div class="form-group">
                        <input type="text" name="event[name]" placeholder="Name" class="form-control" />
                     </div>

                     <div class="form-group">
                        <label for="date">Date:</label>
                        <input type="date" name="event[date]" class="form-control" />
                     </div>

                     <div class="form-group">
                        <label for="time">Time:</label>
                        <input type="time" name="event[time]" class="form-control" />
                     </div>

                     <div class="form-group">
                        <label for="description">Description:</label>
                        <textarea name="event[description]" rows="8" cols="80" class="form-control"></textarea>
                     </div>

                     <div class="form-group">
                        <label for="addressLine1">Address Line 1:</label>
                        <input type="text" name="event[addressLine1]" class="form-control" />
                     </div>

                     <div class="form-group">
                        <label for="addressLine2">Address Line 2:</label>
                        <input type="text" name="event[addressLine2]" class="form-control" />
                     </div>

                     <div class="form-group">
                        <input type="text" name="location[city]" placeholder="City" class="form-control" />
                     </div>

                     <div class="form-group">
                        <input type="text" name="location[state]" placeholder="State" class="form-control" />
                     </div>

                     <button class="btn btn-primary disabled">Create</button>
                  </form>
               <% end %>
            </div>
         </div>
      </div>

      <%= render "shared/footer" %>

   </body>
</html>
